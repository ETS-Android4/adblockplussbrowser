<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.Abp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/abp_foreground_accent</item>
        <item name="colorPrimaryVariant">@color/abp_background_accent</item>
        <item name="colorOnPrimary">@color/abp_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/abp_foreground_accent</item>
        <item name="colorSecondaryVariant">@color/abp_background_accent</item>
        <item name="colorOnSecondary">@color/abp_background</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:colorBackground">@color/abp_background</item>
        <item name="android:textColorPrimary">@color/abp_foreground</item>
        <item name="android:textColorSecondary">@color/abp_foreground_secondary</item>
        <item name="colorOnSurface">@color/abp_foreground_secondary</item>
        <item name="colorBackgroundFloating">@color/abp_background_secondary</item>
        <!-- Snackbar -->
        <item name="snackbarStyle">@style/Widget.Abp.Snackbar</item>
        <item name="snackbarTextViewStyle">@style/Widget.Abp.SnackbarTextView</item>
        <item name="snackbarButtonStyle">@style/Widget.Abp.SnackbarButton</item>
    </style>

    <style name="Theme.Abp.Toolbar" parent="ThemeOverlay.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/abp_background</item>
        <item name="colorOnPrimary">@color/abp_foreground</item>
    </style>

    <style name="Theme.Abp.SubTitleTextStyle" parent="@android:style/TextAppearance.Holo.Widget.ActionBar.Subtitle">
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
    </style>

    <style name="ThemeOverlay.Abp.Snackbar" parent="">
        <item name="colorPrimary">@color/abp_foreground_accent</item>
        <item name="colorOnSurface">@color/abp_background_secondary</item>
    </style>

    <style name="Widget.Abp.Snackbar" parent="Widget.MaterialComponents.Snackbar">
        <item name="materialThemeOverlay">@style/ThemeOverlay.Abp.Snackbar</item>
        <item name="actionTextColorAlpha">1</item>
    </style>

    <style name="Widget.Abp.SnackbarTextView" parent="Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/abp_foreground_secondary</item>
    </style>

    <style name="Widget.Abp.SnackbarButton" parent="Widget.MaterialComponents.Button.TextButton.Snackbar">
        <item name="android:textColor">@color/abp_foreground_accent</item>
    </style>

</resources>