<resources>

    <!-- Adapted from preference_material.xml -->
    <style name="PreferenceContainerStyle">
        <item name="android:minHeight">?android:attr/listPreferredItemHeightSmall</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:clipToPadding">false</item>
        <item name="android:baselineAligned">false</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <!-- Adapted from preference_material.xml -->
    <style name="PreferenceTitleTextStyle">
        <item name="android:maxLines">1</item>
        <item name="android:textAppearance">?android:attr/textAppearanceListItem</item>
        <item name="android:ellipsize">marquee</item>
    </style>

    <!-- Adapted from preference_material.xml -->
    <style name="CustomPreferenceSummaryTextStyle" parent="PreferenceSummaryTextStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="android:maxLines">10</item>
    </style>

    <style name="CustomPreferenceSummaryTextStyle.Accent" parent="CustomPreferenceSummaryTextStyle">
        <item name="android:textColor">@color/clickable_text</item>
    </style>

    <style name="ButtonStyle" parent="@style/TextAppearance.AppCompat.Medium">
        <item name="android:buttonTint">@color/ribbon</item>
    </style>

    <!-- Adapted from preference_category_material.xml -->
    <style name="CustomPreferenceCategoryTitleTextStyle" parent="PreferenceCategoryTitleTextStyle">
        <item name="android:textAlignment">viewStart</item>
        <item name="android:paddingStart">?android:attr/listPreferredItemPaddingStart</item>
        <item name="android:paddingEnd">?android:attr/listPreferredItemPaddingEnd</item>
        <item name="android:textAppearance">@style/TextAppearance.MaterialComponents.Body2</item>
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:textColor">@color/foreground_secondary</item>
    </style>

    <style name="PreferenceScreen">
        <item name="android:paddingTop">16dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:clipToPadding">false</item>
    </style>

    <style name="PreferenceDivider">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="android:background">@color/background</item>
    </style>

</resources>