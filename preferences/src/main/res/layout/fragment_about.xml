<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ScrollView
        style="@style/PreferenceScreen"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <View
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/preferences_group_bg_single"
                app:layout_constraintBottom_toBottomOf="@id/about_imprint"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/open_source_licenses" />

            <LinearLayout
                android:id="@+id/open_source_licenses"
                style="@style/PreferenceContainerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/PreferenceTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/open_source_licenses" />

            </LinearLayout>

            <View
                android:id="@+id/about_divider_1"
                style="@style/PreferenceDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/open_source_licenses" />

            <LinearLayout
                android:id="@+id/about_version"
                style="@style/PreferenceContainerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_divider_1">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/PreferenceTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/version" />

                <com.google.android.material.textview.MaterialTextView
                    android:id="@+id/version_number"
                    style="@style/CustomPreferenceSummaryTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="2.8.1" />

            </LinearLayout>

            <View
                android:id="@+id/about_divider_2"
                style="@style/PreferenceDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_version" />

            <LinearLayout
                android:id="@+id/about_privacy_policy"
                style="@style/PreferenceContainerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_divider_2">

                <org.adblockplus.adblockplussbrowser.base.widget.HyperlinkTextView
                    android:id="@+id/about_privacy_policy_hyperlink"
                    style="@style/PreferenceTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_privacy_policy" />

            </LinearLayout>

            <View
                android:id="@+id/about_divider_3"
                style="@style/PreferenceDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_privacy_policy" />

            <LinearLayout
                android:id="@+id/about_terms_of_use"
                style="@style/PreferenceContainerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_divider_3">

                <org.adblockplus.adblockplussbrowser.base.widget.HyperlinkTextView
                    android:id="@+id/about_terms_of_use_hyperlink"
                    style="@style/PreferenceTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_terms_of_use" />

            </LinearLayout>

            <View
                android:id="@+id/about_divider_4"
                style="@style/PreferenceDivider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_terms_of_use" />

            <LinearLayout
                android:id="@+id/about_imprint"
                style="@style/PreferenceContainerStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/about_divider_4">

                <com.google.android.material.textview.MaterialTextView
                    style="@style/PreferenceTitleTextStyle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/about_imprint" />

                <org.adblockplus.adblockplussbrowser.base.widget.HyperlinkTextView
                    android:id="@+id/about_imprint_text"
                    android:text="@string/about_imprint_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

</layout>