<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="24dp"
        android:paddingEnd="24dp">

        <ImageView
            android:id="@+id/onboarding_privacy_block_ads_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:src="@drawable/ic_onboarding_privacy"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/onboarding_privacy_block_ads_title"
            style="@style/AbpOnboardingTitleTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:text="@string/onboarding_privacy_block_title"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/onboarding_privacy_block_ads_image"
            app:layout_constraintTop_toTopOf="@id/onboarding_privacy_block_ads_image" />

        <TextView
            android:id="@+id/onboarding_welcome_block_ads_description"
            style="@style/AbpOnboardingDescriptionTextStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/onboarding_privacy_block_description"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/onboarding_privacy_block_ads_title"
            app:layout_constraintTop_toBottomOf="@id/onboarding_privacy_block_ads_title" />

        <org.adblockplus.adblockplussbrowser.base.widget.HyperlinkTextView
            android:id="@+id/onboarding_privacy_block_link"
            android:linksClickable="true"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/onboarding_privacy_block_link_text"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/onboarding_welcome_block_ads_description"
            app:layout_constraintTop_toBottomOf="@id/onboarding_welcome_block_ads_description" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>